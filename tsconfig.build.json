{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@helpers/*": ["helpers/*"],
      "@modules/*": ["modules/*"],
      "@common/*": ["common/*"],
      "@auth/*": ["auth/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "test",
    "dist",
    "**/*spec.ts",
    "**/*e2e-spec.ts"
  ]
}