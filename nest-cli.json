{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "modules/**/*", "outDir": "dist" },
      { "include": "auth/**/*", "outDir": "dist" },
      { "include": "helpers/**/*", "outDir": "dist" },
      { "include": "common/**/*", "outDir": "dist" },
      { "include": "**/*.env", "outDir": "dist" }
    ],
    "watchAssets": true,
    "plugins": [
      { "name": "@nestjs/swagger/plugin" }
    ]
  },
  "exec": "node --no-warnings -r ts-node/register -r tsconfig-paths/register"
}